# Flask configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Core secrets - REPLACE WITH YOUR OWN SECRETS
SECRET_KEY=<YOUR_FLASK_SECRET_KEY>
SQLALCHEMY_DATABASE_URI=sqlite:///ecobank.db
BABEL_DEFAULT_LOCALE=en

# Mongo/Redis/Hive (MongoDB and Redis are optional, specify connection strings)
MONGO_URI="mongodb://localhost:27017/ecobank" # Changed ninja to ecobank for sample
REDIS_URL="redis://localhost:6379"
ENGINE_NODE="https://enginerpc.com/" 
#ENGINE_NODE="https://engine.hive.pizza/" 
HIVE_NODE="https://api.hive.blog"

# Hive Account Creation (for system operations like claiming)
HIVE_CLAIMER_ACCOUNT=ecoinstats
HIVE_CLAIMER_KEY=<YOUR_HIVE_CLAIMER_ACCOUNT_ACTIVE_OR_MASTER_KEY>
HIVE_ENCRYPTION_KEY=<YOUR_32_BYTE_FERNET_KEY> # Generate with 'from cryptography.fernet import Fernet; Fernet.generate_key().decode()'

# Post Signing WIF for Emeralds (if applicable, only needed if server posts directly)
POSTING_WIF=<YOUR_HIVE_POSTING_WIF>

# Flask Server Configuration
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
LOG_LEVEL=INFO
SESSION_COOKIE_SECURE=False # Set to True in production with HTTPS

# Mail Settings - REPLACE WITH YOUR SMTP CREDENTIALS
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=<YOUR_MAIL_APP_PASSWORD>
MAIL_DEFAULT_SENDER=your-email@example.com

# PayPal - REPLACE WITH YOUR OWN API CREDENTIALS AND WEBHOOK ID
PAYPAL_API_BASE=https://api-m.sandbox.paypal.com # Use sandbox for dev
PAYPAL_CLIENT_ID=<YOUR_PAYPAL_CLIENT_ID>
PAYPAL_CLIENT_SECRET=<YOUR_PAYPAL_CLIENT_SECRET>
PAYPAL_WEBHOOK_ID=<YOUR_PAYPAL_WEBHOOK_ID>

# Emeralds (Specific to Crypto DreamR project, if needed)
EMERALD_CLAIMER=ecoinstats
EMERALD_ENCRYPTION_KEY=<YOUR_EMERALD_ENCRYPTION_KEY>
EMERALD_CLAIMER_WIF=<YOUR_EMERALD_CLAIMER_WIF>
